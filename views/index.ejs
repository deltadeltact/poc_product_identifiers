                    <i class="fas fa-database me-2"></i>
                    Reset Database
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Reset Confirmation Modal -->
<div class="modal fade" id="resetModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Database Reset Bevestiging</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>WAARSCHUWING:</strong> Dit zal alle huidige data permanent verwijderen!
                </div>
                <p>Deze actie zal:</p>
                <ul>
                    <li>Alle huidige productversies, identifiers en leveringen verwijderen</li>
                    <li>De database resetten naar verse mobile retail testdata</li>
                    <li>Koopjeskelder en inkoopprijs functionaliteit herstellen</li>
                </ul>
                <p><strong>Dit kan niet ongedaan worden gemaakt.</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                <button type="button" class="btn btn-danger" onclick="confirmReset()">
                    <i class="fas fa-database me-2"></i>
                    Ja, Reset Database
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function resetDatabase() {
    const modal = new bootstrap.Modal(document.getElementById('resetModal'));
    modal.show();
}

function confirmReset() {
    const modal = bootstrap.Modal.getInstance(document.getElementById('resetModal'));
    modal.hide();
    
    // Show loading state
    const resetButton = document.querySelector('button[onclick="resetDatabase()"]');
    const originalText = resetButton.innerHTML;
    resetButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Resetting...';
    resetButton.disabled = true;
    
    fetch('/admin/reset-database', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('✅ ' + data.message + '\n\nDe pagina wordt nu ververst om de nieuwe data te laden.');
            window.location.reload();
        } else {
            alert('❌ Database reset mislukt: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Reset failed:', error);
        alert('❌ Database reset mislukt: ' + error.message);
    })
    .finally(() => {
        resetButton.innerHTML = originalText;
        resetButton.disabled = false;
    });
}
</script>

