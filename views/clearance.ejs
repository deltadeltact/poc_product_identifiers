<%- include('partials/header', { title: 'Koopjeskelder' }) %>

<!-- Page Header -->
<div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900 tracking-tight uppercase">
        KOOPJESKELDER
    </h1>
    <div class="flex items-center gap-2">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-700">
            <i class="fas fa-tag mr-2"></i>
            <%= clearanceItems.length %> items
        </span>
    </div>
</div>

<!-- Search and Filter Bar -->
<div class="bg-white rounded-lg border border-gray-200 p-4 mb-6">
    <form method="GET" action="/clearance">
        <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center justify-between">
            <div class="flex flex-1 gap-4 w-full sm:w-auto">
                <div class="relative flex-1 max-w-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text" placeholder="Zoek koopjes..." class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <select id="product_version" name="product_version" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                        <option value="">Alle productversies</option>
                        <% productVersions.forEach(pv => { %>
                            <option value="<%= pv.id %>" <%= filters.product_version == pv.id ? 'selected' : '' %>>
                                <%= pv.name %>
                            </option>
                        <% }); %>
                    </select>
                    <select id="sort_by" name="sort_by" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                        <option value="created_at" <%= filters.sort_by === 'created_at' ? 'selected' : '' %>>Datum toegevoegd</option>
                        <option value="clearance_price" <%= filters.sort_by === 'clearance_price' ? 'selected' : '' %>>Koopjesprijs</option>
                        <option value="product_version_name" <%= filters.sort_by === 'product_version_name' ? 'selected' : '' %>>Productversie</option>
                    </select>
                    <select id="sort_order" name="sort_order" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                        <option value="DESC" <%= filters.sort_order === 'DESC' ? 'selected' : '' %>>Aflopend</option>
                        <option value="ASC" <%= filters.sort_order === 'ASC' ? 'selected' : '' %>>Oplopend</option>
                    </select>
                </div>
            </div>
            <div class="flex gap-2">
                <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
                    <i class="fas fa-filter mr-2"></i>
                    Filter
                </button>
                <button type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                    <i class="fas fa-download mr-2"></i>
                    Exporteren
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Summary Statistics -->
<% if (clearanceItems.length > 0) { %>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-warning">
                        <i class="fas fa-tag fa-2x mb-2"></i><br>
                        Totaal Items
                    </h5>
                    <h3 class="text-warning"><%= clearanceItems.length %></h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-success">
                        <i class="fas fa-euro-sign fa-2x mb-2"></i><br>
                        Met Prijs
                    </h5>
                    <h3 class="text-success">
                        <%= clearanceItems.filter(item => item.clearance_price).length %>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-info">
                        <i class="fas fa-comment fa-2x mb-2"></i><br>
                        Met Reden
                    </h5>
                    <h3 class="text-info">
                        <%= clearanceItems.filter(item => item.clearance_reason).length %>
                    </h3>
                </div>
            </div>
        </div>
    </div>
<% } %>

<!-- Main Content -->
<div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <% if (clearanceItems.length === 0) { %>
        <div class="text-center py-12">
            <i class="fas fa-tags text-4xl text-gray-300 mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Geen koopjes gevonden</h3>
            <p class="text-gray-500 mb-6">Er zijn momenteel geen items gemarkeerd als koopje.</p>
            <button onclick="window.location.href='/identifiers'" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
                <i class="fas fa-search mr-2"></i>
                Zoek identifiers
            </button>
        </div>
    <% } else { %>
        <table class="table-minimal w-full">
            <thead>
                <tr>
                    <th class="w-8">
                        <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                    </th>
                    <th class="text-left">
                        <div class="flex items-center gap-1">
                            ID
                            <i class="fas fa-sort-up text-xs text-gray-400"></i>
                        </div>
                    </th>
                    <th class="text-left">IMEI / Serienummer</th>
                    <th class="text-left">Productversie</th>
                    <th class="text-left">Koopjesprijs</th>
                    <th class="text-left">Reden</th>
                    <th class="text-left">Datum</th>
                    <th class="text-left">Acties</th>
                </tr>
            </thead>
            <tbody>
                <% clearanceItems.forEach(item => { %>
                    <tr class="group">
                        <td>
                            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                        </td>
                        <td class="font-medium text-gray-900"><%= item.id %></td>
                        <td>
                            <% if (item.imei) { %>
                                <code class="text-sm bg-gray-100 px-2 py-1 rounded text-gray-800"><%= item.imei %></code>
                            <% } else if (item.serial_number) { %>
                                <code class="text-sm bg-gray-100 px-2 py-1 rounded text-gray-800"><%= item.serial_number %></code>
                            <% } else { %>
                                <span class="text-gray-400">-</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/product-versions/<%= item.product_version_id %>" class="text-blue-600 hover:text-blue-800 underline font-medium">
                                <%= item.product_version_name %>
                            </a>
                        </td>
                        <td>
                            <% if (item.clearance_price) { %>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
                                    â‚¬<%= parseFloat(item.clearance_price).toFixed(2) %>
                                </span>
                            <% } else { %>
                                <span class="text-gray-400">Geen prijs</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (item.clearance_reason) { %>
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                                    <%= item.clearance_reason %>
                                </span>
                            <% } else { %>
                                <span class="text-gray-400">Geen reden</span>
                            <% } %>
                        </td>
                        <td class="text-sm text-gray-500">
                            <%= new Date(item.updated_at).toLocaleDateString('nl-NL') %>
                        </td>
                        <td>
                            <div class="flex items-center gap-2">
                                <button onclick="window.location.href='/identifiers/<%= item.id %>'" class="text-blue-600 hover:text-blue-800 text-sm font-medium" title="Bekijken">
                                    Bekijken
                                </button>
                                <button type="button" onclick="editClearance(<%= item.id %>, '<%= item.clearance_price || '' %>', '<%= item.clearance_reason || '' %>')" data-bs-toggle="modal" data-bs-target="#editClearanceModal" class="text-amber-600 hover:text-amber-800 text-sm font-medium" title="Bewerken">
                                    Bewerken
                                </button>
                                <button type="button" onclick="removeClearance(<%= item.id %>)" class="text-red-600 hover:text-red-800 text-sm font-medium" title="Verwijderen">
                                    Verwijderen
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
        <!-- Pagination -->
        <div class="px-4 py-3 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-500">
                <%= clearanceItems.length %> resultaten
            </div>
            <div class="flex items-center space-x-2">
                <button class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-600 hover:bg-gray-50">Vorige</button>
                <button class="px-3 py-1 text-sm bg-blue-600 text-white rounded">1</button>
                <button class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-600 hover:bg-gray-50">Volgende</button>
            </div>
        </div>
    <% } %>
</div>

<!-- Edit Clearance Modal -->
<div class="modal fade" id="editClearanceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editClearanceForm" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title">Koopje bewerken</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="edit_clearance_price" class="form-label">Koopjesprijs</label>
                            <div class="input-group">
                                <span class="input-group-text">â‚¬</span>
                                <input 
                                    type="number" 
                                    class="form-control" 
                                    id="edit_clearance_price" 
                                    name="clearance_price" 
                                    step="0.01"
                                    min="0.01"
                                    placeholder="0.00">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="edit_clearance_reason" class="form-label">Reden</label>
                            <select class="form-select" id="edit_clearance_reason" name="clearance_reason">
                                <option value="">Selecteer reden</option>
                                <option value="Doos beschadigd">Doos beschadigd</option>
                                <option value="Showmodel">Showmodel</option>
                                <option value="Laatste exemplaar">Laatste exemplaar</option>
                                <option value="Seizoensuitverkoop">Seizoensuitverkoop</option>
                                <option value="Verouderd model">Verouderd model</option>
                                <option value="Andere reden">Andere reden</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Custom reason input -->
                    <div class="mt-3" id="editCustomReasonDiv" style="display: none;">
                        <label for="edit_custom_reason" class="form-label">Aangepaste reden</label>
                        <input type="text" class="form-control" id="edit_custom_reason" placeholder="Voer aangepaste reden in">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuleren</button>
                    <button type="submit" class="btn btn-warning">Opslaan</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Edit clearance function
function editClearance(id, price, reason) {
    const form = document.getElementById('editClearanceForm');
    const priceInput = document.getElementById('edit_clearance_price');
    const reasonSelect = document.getElementById('edit_clearance_reason');
    const customDiv = document.getElementById('editCustomReasonDiv');
    const customInput = document.getElementById('edit_custom_reason');
    
    // Set form action
    form.action = `/identifiers/${id}/toggle-clearance`;
    
    // Set current values
    priceInput.value = price || '';
    
    // Handle reason selection
    const predefinedReasons = ['Doos beschadigd', 'Showmodel', 'Laatste exemplaar', 'Seizoensuitverkoop', 'Verouderd model'];
    if (predefinedReasons.includes(reason)) {
        reasonSelect.value = reason;
        customDiv.style.display = 'none';
    } else if (reason) {
        reasonSelect.value = 'Andere reden';
        customInput.value = reason;
        customDiv.style.display = 'block';
    } else {
        reasonSelect.value = '';
        customDiv.style.display = 'none';
    }
}

// Remove clearance function
function removeClearance(id) {
    if (confirm('Weet u zeker dat u de koopje status van dit item wilt verwijderen?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/identifiers/${id}/toggle-clearance`;
        
        const removeInput = document.createElement('input');
        removeInput.type = 'hidden';
        removeInput.name = 'remove_clearance';
        removeInput.value = 'true';
        form.appendChild(removeInput);
        
        document.body.appendChild(form);
        form.submit();
    }
}

// Handle custom reason dropdown in edit modal
document.getElementById('edit_clearance_reason').addEventListener('change', function() {
    const customDiv = document.getElementById('editCustomReasonDiv');
    const customInput = document.getElementById('edit_custom_reason');
    
    if (this.value === 'Andere reden') {
        customDiv.style.display = 'block';
        customInput.required = true;
    } else {
        customDiv.style.display = 'none';
        customInput.required = false;
        customInput.value = '';
    }
});

// Handle edit form submission
document.getElementById('editClearanceForm').addEventListener('submit', function(e) {
    const reasonSelect = document.getElementById('edit_clearance_reason');
    const customInput = document.getElementById('edit_custom_reason');
    const priceInput = document.getElementById('edit_clearance_price');
    
    // If "Andere reden" is selected, use the custom input value
    if (reasonSelect.value === 'Andere reden' && customInput.value.trim()) {
        // Create a hidden input with the custom reason
        const hiddenInput = document.createElement('input');
        hiddenInput.type = 'hidden';
        hiddenInput.name = 'clearance_reason';
        hiddenInput.value = customInput.value.trim();
        this.appendChild(hiddenInput);
        
        // Clear the select to avoid duplicate values
        reasonSelect.name = '';
    }
    
    // Validate price if provided
    if (priceInput.value && parseFloat(priceInput.value) <= 0) {
        e.preventDefault();
        alert('Koopjesprijs moet positief zijn');
        return false;
    }
});
</script>

<%- include('partials/footer') %>