<%- include('partials/header', { title: 'Schade Review' }) %>

<!-- Page Header -->
<div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900 tracking-tight uppercase">
        SCHADE REVIEW
    </h1>
    <div class="flex items-center gap-3">
        <button onclick="window.location.href='/'" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            Terug naar dashboard
        </button>
    </div>
</div>

<!-- Summary -->
<div class="bg-white rounded-lg border border-gray-200 p-6 mb-8">
    <div class="flex items-center justify-between">
        <div>
            <h2 class="text-lg font-semibold text-gray-900 mb-2">
                <i class="fas fa-exclamation-triangle text-yellow-600 mr-2"></i>
                Wachten op review
            </h2>
            <p class="text-gray-600">
                <strong><%= damagedItems.length %></strong> artikel(en) gemarkeerd als defect bij levering
            </p>
        </div>
        <% if (damagedItems.length > 0) { %>
            <div class="text-right">
                <p class="text-sm text-gray-500 mb-2">Bulk acties:</p>
                <div class="flex gap-2">
                    <button onclick="selectAll()" class="text-sm px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded">Alles selecteren</button>
                    <button onclick="selectNone()" class="text-sm px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded">Niets selecteren</button>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% if (damagedItems.length === 0) { %>
    <!-- No items -->
    <div class="bg-green-50 border border-green-200 rounded-lg p-8 text-center">
        <i class="fas fa-check-circle text-green-600 text-4xl mb-4"></i>
        <h3 class="text-lg font-medium text-green-800 mb-2">Geen items voor review</h3>
        <p class="text-green-700">Er zijn momenteel geen beschadigde artikelen die wachten op review.</p>
    </div>
<% } else { %>
    <!-- Damaged Items List -->
    <div class="bg-white rounded-lg border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Beschadigde artikelen</h2>
        </div>
        
        <form id="damageReviewForm">
            <div class="divide-y divide-gray-200">
                <% damagedItems.forEach((item, index) => { %>
                    <div class="p-6 <%= index % 2 === 0 ? '' : 'bg-gray-50' %>">
                        <div class="flex items-start">
                            <!-- Selection checkbox -->
                            <div class="flex items-center h-5 mt-1 mr-4">
                                <input 
                                    type="checkbox" 
                                    name="selected_items" 
                                    value="<%= item.id %>"
                                    class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                                >
                            </div>
                            
                            <!-- Item Info -->
                            <div class="flex-1">
                                <div class="flex items-start justify-between mb-4">
                                    <div>
                                        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= item.product_name %></h3>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                                            <div><span class="font-medium">ID:</span> #<%= item.id %></div>
                                            <% if (item.imei) { %>
                                                <div>
                                                    <span class="font-medium">IMEI:</span>
                                                    <code class="bg-gray-100 px-2 py-1 rounded text-gray-800"><%= item.imei %></code>
                                                </div>
                                            <% } %>
                                            <% if (item.serial_number) { %>
                                                <div>
                                                    <span class="font-medium">Serienummer:</span>
                                                    <code class="bg-gray-100 px-2 py-1 rounded text-gray-800"><%= item.serial_number %></code>
                                                </div>
                                            <% } %>
                                            <div><span class="font-medium">Levering:</span> <%= item.delivery_number %></div>
                                            <div><span class="font-medium">Leverancier:</span> <%= item.supplier %></div>
                                            <div><span class="font-medium">Inkoopprijs:</span> €<%= parseFloat(item.purchase_price || 0).toFixed(2) %></div>
                                        </div>
                                    </div>
                                    
                                    <!-- Individual Actions -->
                                    <div class="ml-6 flex gap-2">
                                        <button 
                                            type="button" 
                                            onclick="processIndividual('<%= item.id %>', 'return_to_supplier')"
                                            class="px-3 py-1 bg-red-600 hover:bg-red-700 text-white text-xs rounded transition-colors"
                                        >
                                            Retourneren
                                        </button>
                                        <button 
                                            type="button" 
                                            onclick="processIndividual('<%= item.id %>', 'mark_as_clearance')"
                                            class="px-3 py-1 bg-orange-600 hover:bg-orange-700 text-white text-xs rounded transition-colors"
                                        >
                                            Naar Koopje
                                        </button>
                                        <button 
                                            type="button" 
                                            onclick="processIndividual('<%= item.id %>', 'write_off')"
                                            class="px-3 py-1 bg-gray-600 hover:bg-gray-700 text-white text-xs rounded transition-colors"
                                        >
                                            Afboeken
                                        </button>
                                    </div>
                                </div>
                                
                                <!-- Damage Description -->
                                <% if (item.damage_description) { %>
                                    <div class="bg-red-50 border border-red-200 rounded-lg p-3">
                                        <div class="flex items-start">
                                            <i class="fas fa-exclamation-triangle text-red-600 mt-0.5 mr-2 text-sm"></i>
                                            <div>
                                                <h4 class="text-sm font-medium text-red-800 mb-1">Schade beschrijving</h4>
                                                <p class="text-sm text-red-700"><%= item.damage_description %></p>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- Bulk Actions -->
            <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-gray-600">
                        <span id="selectedCount">0</span> artikel(en) geselecteerd
                    </div>
                    <div class="flex gap-3">
                        <button 
                            type="button" 
                            onclick="processBulk('return_to_supplier')"
                            class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg transition-colors disabled:bg-gray-300"
                            id="bulkReturnBtn"
                            disabled
                        >
                            <i class="fas fa-undo mr-2"></i>
                            Retourneren naar leverancier
                        </button>
                        <button 
                            type="button" 
                            onclick="processBulk('mark_as_clearance')"
                            class="px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium rounded-lg transition-colors disabled:bg-gray-300"
                            id="bulkClearanceBtn"
                            disabled
                        >
                            <i class="fas fa-tag mr-2"></i>
                            Naar koopjeskelder
                        </button>
                        <button 
                            type="button" 
                            onclick="processBulk('write_off')"
                            class="px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors disabled:bg-gray-300"
                            id="bulkWriteoffBtn"
                            disabled
                        >
                            <i class="fas fa-times mr-2"></i>
                            Afboeken
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
<% } %>

<!-- Clearance Modal -->
<div id="clearanceModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" style="display: none;">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Koopjeskelder details</h3>
            <form id="clearanceForm">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Koopjesprijs (€)</label>
                    <input 
                        type="number" 
                        step="0.01" 
                        name="clearance_price" 
                        class="w-full border border-gray-300 rounded-lg px-3 py-2"
                        placeholder="0.00"
                        required
                    >
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Reden</label>
                    <textarea 
                        name="clearance_reason" 
                        rows="3"
                        class="w-full border border-gray-300 rounded-lg px-3 py-2"
                        placeholder="Reden voor koopje..."
                        required
                    ></textarea>
                </div>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeClearanceModal()" class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-700 rounded-lg">
                        Annuleren
                    </button>
                    <button type="submit" class="px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg">
                        Bevestigen
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
let currentAction = '';
let currentItems = [];

// Update selected count
function updateSelectedCount() {
    const checkboxes = document.querySelectorAll('input[name="selected_items"]:checked');
    const count = checkboxes.length;
    document.getElementById('selectedCount').textContent = count;
    
    // Enable/disable bulk action buttons
    const buttons = ['bulkReturnBtn', 'bulkClearanceBtn', 'bulkWriteoffBtn'];
    buttons.forEach(btnId => {
        document.getElementById(btnId).disabled = count === 0;
    });
}

// Select all items
function selectAll() {
    document.querySelectorAll('input[name="selected_items"]').forEach(cb => {
        cb.checked = true;
    });
    updateSelectedCount();
}

// Select no items
function selectNone() {
    document.querySelectorAll('input[name="selected_items"]').forEach(cb => {
        cb.checked = false;
    });
    updateSelectedCount();
}

// Process individual item
function processIndividual(itemId, action) {
    if (action === 'mark_as_clearance') {
        currentAction = action;
        currentItems = [itemId];
        document.getElementById('clearanceModal').style.display = 'block';
    } else {
        const actionText = action === 'return_to_supplier' ? 'retourneren naar leverancier' : 'afboeken';
        if (confirm(`Weet je zeker dat je dit artikel wilt ${actionText}?`)) {
            submitAction(action, [itemId]);
        }
    }
}

// Process bulk action
function processBulk(action) {
    const checkboxes = document.querySelectorAll('input[name="selected_items"]:checked');
    const itemIds = Array.from(checkboxes).map(cb => cb.value);
    
    if (itemIds.length === 0) return;
    
    if (action === 'mark_as_clearance') {
        currentAction = action;
        currentItems = itemIds;
        document.getElementById('clearanceModal').style.display = 'block';
    } else {
        const actionText = action === 'return_to_supplier' ? 'retourneren naar leverancier' : 'afboeken';
        if (confirm(`Weet je zeker dat je ${itemIds.length} artikel(en) wilt ${actionText}?`)) {
            submitAction(action, itemIds);
        }
    }
}

// Submit action
function submitAction(action, itemIds, clearanceData = null) {
    const requestBody = {
        action: action,
        identifier_ids: itemIds
    };
    
    if (clearanceData) {
        requestBody.clearance_price = clearanceData.price;
        requestBody.clearance_reason = clearanceData.reason;
    }
    
    fetch('/damage-review/action', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(requestBody)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert(data.message);
            location.reload();
        } else {
            alert('Error: ' + data.error);
        }
    })
    .catch(error => {
        alert('Network error: ' + error.message);
    });
}

// Close clearance modal
function closeClearanceModal() {
    document.getElementById('clearanceModal').style.display = 'none';
    document.getElementById('clearanceForm').reset();
}

// Handle clearance form submission
document.getElementById('clearanceForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const clearanceData = {
        price: formData.get('clearance_price'),
        reason: formData.get('clearance_reason')
    };
    
    submitAction(currentAction, currentItems, clearanceData);
    closeClearanceModal();
});

// Listen for checkbox changes
document.addEventListener('change', function(e) {
    if (e.target.name === 'selected_items') {
        updateSelectedCount();
    }
});

// Initial update
updateSelectedCount();
</script>

<%- include('partials/footer') %>