<%- include('partials/header', { title: 'Identifiers' }) %>

<!-- Page Header -->
<div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900 tracking-tight uppercase">
        IDENTIFIERS
    </h1>
</div>

<!-- Search and Filter Bar -->
<div class="bg-white rounded-lg border border-gray-200 p-4 mb-6">
    <form method="GET" action="/identifiers">
        <div class="flex flex-col gap-4">
            <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-end">
                <div class="relative flex-1 max-w-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input 
                        type="text" 
                        id="search" 
                        name="search" 
                        value="<%= filters.search || '' %>"
                        placeholder="Zoek op IMEI of serienummer..." 
                        class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 flex-1">
                    <select id="product_version" name="product_version" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                        <option value="">Alle productversies</option>
                        <% productVersions.forEach(pv => { %>
                            <option value="<%= pv.id %>" <%= filters.product_version == pv.id ? 'selected' : '' %>>
                                <%= pv.name %>
                            </option>
                        <% }); %>
                    </select>
                    <select id="status" name="status" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                        <option value="">Alle statussen</option>
                        <option value="in_stock" <%= filters.status === 'in_stock' ? 'selected' : '' %>>Op voorraad</option>
                        <option value="sold" <%= filters.status === 'sold' ? 'selected' : '' %>>Verkocht</option>
                        <option value="defective" <%= filters.status === 'defective' ? 'selected' : '' %>>Defect</option>
                        <option value="missing" <%= filters.status === 'missing' ? 'selected' : '' %>>Vermist</option>
                        <option value="reserved" <%= filters.status === 'reserved' ? 'selected' : '' %>>Gereserveerd</option>
                    </select>
                    <select id="clearance" name="clearance" class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                        <option value="">Alle items</option>
                        <option value="true" <%= filters.clearance === 'true' ? 'selected' : '' %>>Alleen koopjes</option>
                        <option value="false" <%= filters.clearance === 'false' ? 'selected' : '' %>>Reguliere items</option>
                    </select>
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors">
                        <i class="fas fa-search mr-2"></i>
                        Zoeken
                    </button>
                    <button type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                        <i class="fas fa-filter mr-2"></i>
                        Filters
                    </button>
                    <button type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                        <i class="fas fa-download mr-2"></i>
                        Exporteren
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Main Content -->
<div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <% if (identifiers.length === 0) { %>
        <div class="text-center py-12">
            <i class="fas fa-search text-4xl text-gray-300 mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Geen identifiers gevonden</h3>
            <p class="text-gray-500 mb-6">Pas je zoekfilters aan of boek nieuwe voorraad in.</p>
        </div>
    <% } else { %>
        <table class="table-minimal w-full">
            <thead>
                <tr>
                    <th class="w-8">
                        <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                    </th>
                    <th class="text-left">
                        <div class="flex items-center gap-1">
                            ID
                            <i class="fas fa-sort-up text-xs text-gray-400"></i>
                        </div>
                    </th>
                    <th class="text-left">IMEI</th>
                    <th class="text-left">Serienummer</th>
                    <th class="text-left">Productversie</th>
                    <th class="text-left">Status</th>
                    <th class="text-left">Koopje</th>
                    <th class="text-left">Acties</th>
                </tr>
            </thead>
            <tbody>
                <% identifiers.forEach(identifier => { %>
                    <tr class="group">
                        <td>
                            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                        </td>
                        <td class="font-medium text-gray-900"><%= identifier.id %></td>
                        <td>
                            <% if (identifier.imei) { %>
                                <code class="text-sm bg-gray-100 px-2 py-1 rounded text-gray-800"><%= identifier.imei %></code>
                            <% } else { %>
                                <span class="text-gray-400">-</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (identifier.serial_number) { %>
                                <code class="text-sm bg-gray-100 px-2 py-1 rounded text-gray-800"><%= identifier.serial_number %></code>
                            <% } else { %>
                                <span class="text-gray-400">-</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/product-versions/<%= identifier.product_version_id %>" class="text-blue-600 hover:text-blue-800 underline font-medium">
                                <%= identifier.product_version_name %>
                            </a>
                        </td>
                        <td>
                            <% 
                                let statusClass = '';
                                let statusText = '';
                                switch(identifier.status) {
                                    case 'in_stock':
                                        statusClass = 'bg-green-100 text-green-700';
                                        statusText = 'Op voorraad';
                                        break;
                                    case 'sold':
                                        statusClass = 'bg-blue-100 text-blue-700';
                                        statusText = 'Verkocht';
                                        break;
                                    case 'defective':
                                        statusClass = 'bg-red-100 text-red-700';
                                        statusText = 'Defect';
                                        break;
                                    case 'missing':
                                        statusClass = 'bg-amber-100 text-amber-700';
                                        statusText = 'Vermist';
                                        break;
                                    case 'reserved':
                                        statusClass = 'bg-purple-100 text-purple-700';
                                        statusText = 'Gereserveerd';
                                        break;
                                }
                            %>
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= statusClass %>">
                                <%= statusText %>
                            </span>
                        </td>
                        <td>
                            <% if (identifier.is_clearance) { %>
                                <div class="flex flex-col gap-1">
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-700">
                                        <i class="fas fa-tag mr-1"></i>
                                        Koopje
                                    </span>
                                    <% if (identifier.clearance_price) { %>
                                        <span class="text-xs text-gray-500">â‚¬<%= parseFloat(identifier.clearance_price).toFixed(2) %></span>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <span class="text-gray-400">-</span>
                            <% } %>
                        </td>
                        <td>
                            <button onclick="window.location.href='/identifiers/<%= identifier.id %>'" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                Bekijken
                            </button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
        <!-- Pagination -->
        <div class="px-4 py-3 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-500">
                <%= identifiers.length %> resultaten
            </div>
            <div class="flex items-center space-x-2">
                <button class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-600 hover:bg-gray-50">Vorige</button>
                <button class="px-3 py-1 text-sm bg-blue-600 text-white rounded">1</button>
                <button class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-600 hover:bg-gray-50">Volgende</button>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>