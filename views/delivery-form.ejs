<%- include('partials/header', { title: 'Nieuwe levering' }) %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-plus me-2"></i>
                    Nieuwe levering aanmaken
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/deliveries">
                    <div class="mb-3">
                        <label for="delivery_number" class="form-label">Leveringsnummer *</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="delivery_number" 
                            name="delivery_number" 
                            required
                            placeholder="Bijvoorbeeld: LEV-2025-001">
                        <div class="form-text">Uniek leveringsnummer voor identificatie</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="delivery_date" class="form-label">Leveringsdatum *</label>
                        <input 
                            type="date" 
                            class="form-control" 
                            id="delivery_date" 
                            name="delivery_date" 
                            value="<%= new Date().toISOString().split('T')[0] %>"
                            required>
                        <div class="form-text">Datum waarop de levering is ontvangen</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="supplier" class="form-label">Leverancier</label>
                        <input 
                            type="text" 
                            class="form-control" 
                            id="supplier" 
                            name="supplier"
                            placeholder="Bijvoorbeeld: Apple Distribution">
                        <div class="form-text">Optioneel in POC</div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a href="/deliveries" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Terug
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>
                            Levering aanmaken
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="alert alert-info mt-4">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Volgende stap:</strong> Na het aanmaken van de levering kun je productregels toevoegen 
            en identifiers invoeren afhankelijk van de trackingconfiguratie.
        </div>
    </div>
</div>

<%- include('partials/footer') %>