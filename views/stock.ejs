<%- include('partials/header', { title: 'Voorraad overzicht' }) %>

<!-- Page Header -->
<div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-gray-900 tracking-tight uppercase">
        VOORRAAD OVERZICHT
    </h1>
</div>

<!-- Search and Filter Bar -->
<div class="bg-white rounded-lg border border-gray-200 p-4 mb-6">
    <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center justify-between">
        <div class="flex flex-1 gap-4 w-full sm:w-auto">
            <div class="relative flex-1 max-w-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-search text-gray-400"></i>
                </div>
                <input type="text" placeholder="Zoek productversie..." class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div class="relative">
                <select class="block w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                    <option value="">Filter op tracking mode...</option>
                    <option value="none">Geen tracking</option>
                    <option value="imei">IMEI</option>
                    <option value="serial">Serienummer</option>
                </select>
            </div>
        </div>
        <div class="flex gap-2">
            <button class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                <i class="fas fa-filter mr-2"></i>
                Filters
            </button>
            <button class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                <i class="fas fa-download mr-2"></i>
                Exporteren
            </button>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <% if (stock.length === 0) { %>
        <div class="text-center py-12">
            <i class="fas fa-warehouse text-4xl text-gray-300 mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Geen productversies gevonden</h3>
            <p class="text-gray-500 mb-6">Maak eerst productversies aan.</p>
            <button onclick="window.location.href='/product-versions/new'" class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors">
                <i class="fas fa-plus mr-2"></i>
                Productversie aanmaken
            </button>
        </div>
    <% } else { %>
        <table class="table-minimal w-full">
            <thead>
                <tr>
                    <th class="w-8">
                        <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                    </th>
                    <th class="text-left">
                        <div class="flex items-center gap-1">
                            ID
                            <i class="fas fa-sort-up text-xs text-gray-400"></i>
                        </div>
                    </th>
                    <th class="text-left">Productversie</th>
                    <th class="text-left">Tracking Mode</th>
                    <th class="text-left">Reguliere Voorraad</th>
                    <th class="text-left">Koopjes</th>
                    <th class="text-left">Acties</th>
                </tr>
            </thead>
            <tbody>
                <% stock.forEach(item => { %>
                    <tr class="group">
                        <td>
                            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                        </td>
                        <td class="font-medium text-gray-900"><%= item.id %></td>
                        <td>
                            <a href="/product-versions/<%= item.id %>" class="text-blue-600 hover:text-blue-800 underline font-medium">
                                <%= item.name %>
                            </a>
                        </td>
                        <td>
                            <% 
                                let badgeClass = '';
                                let trackingText = '';
                                switch(item.tracking_mode) {
                                    case 'none': 
                                        badgeClass = 'bg-gray-100 text-gray-700';
                                        trackingText = 'Geen tracking';
                                        break;
                                    case 'imei':
                                        badgeClass = 'bg-blue-100 text-blue-700';
                                        trackingText = 'IMEI';
                                        break;
                                    case 'serial':
                                        badgeClass = 'bg-amber-100 text-amber-700';
                                        trackingText = 'Serienummer';
                                        break;
                                }
                            %>
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= badgeClass %>">
                                <%= trackingText %>
                            </span>
                        </td>
                        <td>
                            <% if (item.tracking_mode === 'none') { %>
                                <% if (item.bulk_quantity > 0) { %>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                                        <i class="fas fa-boxes mr-1"></i>
                                        <%= item.bulk_quantity %> stuks (bulk)
                                    </span>
                                <% } else { %>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                                        <i class="fas fa-exclamation-circle mr-1"></i>
                                        0 stuks (bulk)
                                    </span>
                                <% } %>
                            <% } else { %>
                                <% if (item.stock_count > 0) { %>
                                    <button onclick="window.location.href='/identifiers?product_version=<%= item.id %>&status=in_stock&clearance=false'" class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700 hover:bg-green-200 transition-colors">
                                        <i class="fas fa-boxes mr-1"></i>
                                        <%= item.stock_count %> stuks
                                    </button>
                                <% } else { %>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                                        <i class="fas fa-exclamation-circle mr-1"></i>
                                        0 stuks
                                    </span>
                                <% } %>
                            <% } %>
                        </td>
                        <td>
                            <% if (item.tracking_mode === 'none') { %>
                                <span class="text-gray-400">N.v.t.</span>
                            <% } else { %>
                                <% if ((item.clearance_count || 0) > 0) { %>
                                    <button onclick="window.location.href='/identifiers?product_version=<%= item.id %>&status=in_stock&clearance=true'" class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-700 hover:bg-amber-200 transition-colors">
                                        <i class="fas fa-tag mr-1"></i>
                                        <%= item.clearance_count %> koopjes
                                    </button>
                                <% } else { %>
                                    <span class="text-gray-400">0 koopjes</span>
                                <% } %>
                            <% } %>
                        </td>
                        <td>
                            <div class="flex items-center gap-2">
                                <button onclick="window.location.href='/product-versions/<%= item.id %>'" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    Bekijken
                                </button>
                                <% if (item.tracking_mode !== 'none' && (item.stock_count > 0 || (item.clearance_count || 0) > 0)) { %>
                                    <button onclick="window.location.href='/identifiers?product_version=<%= item.id %>&status=in_stock'" class="text-green-600 hover:text-green-800 text-sm font-medium">
                                        Identifiers
                                    </button>
                                <% } %>
                                <% if (item.tracking_mode !== 'none' && (item.clearance_count || 0) > 0) { %>
                                    <button onclick="window.location.href='/clearance?product_version=<%= item.id %>'" class="text-amber-600 hover:text-amber-800 text-sm font-medium">
                                        Koopjes
                                    </button>
                                <% } %>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
        <!-- Pagination -->
        <div class="px-4 py-3 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-500">
                <%= stock.length %> resultaten
            </div>
            <div class="flex items-center space-x-2">
                <button class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-600 hover:bg-gray-50">Vorige</button>
                <button class="px-3 py-1 text-sm bg-blue-600 text-white rounded">1</button>
                <button class="px-3 py-1 text-sm border border-gray-300 rounded text-gray-600 hover:bg-gray-50">Volgende</button>
            </div>
        </div>
    <% } %>
</div>

<!-- Info Banner -->
<div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-6">
    <div class="flex items-start">
        <i class="fas fa-info-circle text-blue-600 mt-1 mr-3 flex-shrink-0"></i>
        <div>
            <h3 class="text-sm font-medium text-blue-800">Informatie</h3>
            <p class="text-sm text-blue-700 mt-1">
                Alleen productversies met tracking kunnen individuele voorraadnummers weergeven. 
                Voor productversies zonder tracking wordt geen individuele voorraad bijgehouden.
            </p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>