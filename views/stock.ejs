<%- include('partials/header', { title: 'Voorraad overzicht' }) %>

<h1>
    <i class="fas fa-warehouse me-2"></i>
    Voorraad overzicht
</h1>

<div class="card">
    <div class="card-body">
        <% if (stock.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-warehouse fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Geen productversies gevonden</h5>
                <p class="text-muted">Maak eerst productversies aan.</p>
                <a href="/product-versions/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>
                    Nieuwe productversie
                </a>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Productversie</th>
                            <th>Trackingmodus</th>
                            <th>Voorraad</th>
                            <th>Acties</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stock.forEach(item => { %>
                            <tr>
                                <td>
                                    <a href="/product-versions/<%= item.id %>" class="text-decoration-none">
                                        <strong><%= item.name %></strong>
                                    </a>
                                </td>
                                <td>
                                    <% 
                                        let badgeClass = '';
                                        let trackingText = '';
                                        switch(item.tracking_mode) {
                                            case 'none': 
                                                badgeClass = 'bg-secondary';
                                                trackingText = 'Geen tracking';
                                                break;
                                            case 'imei':
                                                badgeClass = 'bg-info';
                                                trackingText = 'IMEI';
                                                break;
                                            case 'serial':
                                                badgeClass = 'bg-warning';
                                                trackingText = 'Serienummer';
                                                break;
                                        }
                                    %>
                                    <span class="badge <%= badgeClass %>">
                                        <%= trackingText %>
                                    </span>
                                </td>
                                <td>
                                    <% if (item.tracking_mode === 'none') { %>
                                        <% if (item.bulk_quantity > 0) { %>
                                            <span class="badge bg-primary fs-6">
                                                <i class="fas fa-boxes me-1"></i>
                                                <%= item.bulk_quantity %> stuks (bulk)
                                            </span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-exclamation-circle me-1"></i>
                                                0 stuks (bulk)
                                            </span>
                                        <% } %>
                                    <% } else { %>
                                        <% if (item.stock_count > 0) { %>
                                            <a href="/identifiers?product_version=<%= item.id %>&status=in_stock" class="text-decoration-none">
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-boxes me-1"></i>
                                                    <%= item.stock_count %> stuks
                                                </span>
                                            </a>
                                        <% } else { %>
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-exclamation-circle me-1"></i>
                                                0 stuks
                                            </span>
                                        <% } %>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/product-versions/<%= item.id %>" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="fas fa-eye"></i> Bekijken
                                    </a>
                                    <% if (item.tracking_mode !== 'none' && item.stock_count > 0) { %>
                                        <a href="/identifiers?product_version=<%= item.id %>&status=in_stock" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-list"></i> Identifiers
                                        </a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>

<div class="mt-4">
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Info:</strong> Alleen productversies met tracking kunnen individuele voorraadnummers weergeven. 
        Voor productversies zonder tracking wordt geen individuele voorraad bijgehouden.
    </div>
</div>

<%- include('partials/footer') %>